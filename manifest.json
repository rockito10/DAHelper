{
  "manifest_version": 3,
  "name": "DA Helper",
  "version": "1.0.0",
  "description": "Easier tags, auto titling.",
  "permissions": ["activeTab", "scripting", "declarativeContent", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "128": "icon128.png"
  }
  
}
